---
layout: default
---

{% include lede.liquid %}

{% assign speakers = site.data.speakers | sort %}

<ul class="speaker-cloud">
{% for speaker_hash in speakers %}
{% assign speaker = speaker_hash[1] %}
  <li><a href="#{{ speaker.name | slugify }}">{{ speaker.name }}</a></li>
{% endfor %}
</ul>

<ul class="">
{% for speaker_hash in speakers %}
{% assign speaker = speaker_hash[1] %}
  <li class="speaker">
    <h2 class="speaker__id" id="{{ speaker.name | slugify }}">
      <img class="speaker__id__hackergotchi" src="{{ speaker.hackergotchi }}" alt="hackergotchi of {{ speaker.name }}" />

      <a class="speaker__id__name" href="https://twitter.com/{{ speaker.twitter }}">
        {{ speaker.name }}
      </a>
    </h2>

    <span class="speaker__about">
      {{ speaker.about | markdownify | remove: '<p>' | remove: '</p>' }}
    </span>

    {% if speaker.panel == true %}

    <span class="speaker__panel-title">
      Panelist
    </span>

    {% endif %}


    {% if speaker.talk %}

    <h3 class="speaker__talk-title">
      {{ speaker.talk.title | markdownify | remove: '<p>' | remove: '</p>' }}
    </h3>

    <div class="speaker__talk-abstract">
      {{ speaker.talk.abstract | markdownify | remove: '<p>' | remove: '</p>' }}
    </div>

    {% endif %}

    {% if speaker.workshop %}

    <h3 class="speaker__workshop-title">
      {{ speaker.workshop.title | markdownify | remove: '<p>' | remove: '</p>' }}
    </h3>

    <div class="speaker__workshop-abstract">
      {{ speaker.workshop.abstract | markdownify | remove: '<p>' | remove: '</p>' }}
    </div>

    {% endif %}

    <a class="skip-link" href="#content">&uarr; Return to top</a>
  </li>
{% endfor %}
</ul>
